<p id="notice"><%= notice %></p>

<h1>Listing Storage</h1>
<%= button_to 'New Storage', new_storage_path,method: :get %>
<table class="center" border=1>
  <thead>
    <tr>
      <th>RAM</th>
      <th>ROM(</th>
      <th>Extended</th>
      <th>Memory card</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @storage.each do |storage| %>
      <tr>
        <td><%= storage.primary %></td>
        <td><%= storage.secondary %></td>
        <td><%= storage.extended %></td>
        <td><%= storage.memory_card %></td>
        <td><%= link_to 'Show', storage %></td>
        <td><%= link_to 'Edit', edit_storage_path(storage) %></td>
        <td><%= link_to 'Destroy', storage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

